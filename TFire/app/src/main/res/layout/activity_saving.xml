<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_saving"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.flist.com.tfire.Saving"
    android:background="@android:color/holo_blue_dark">

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText"
        android:layout_marginTop="5dp"
        android:id="@+id/editText2"
        android:visibility="visible"
        android:hint="Email"
        android:textSize="14sp"
        android:textColor="@color/bodyTextColor"
        android:background="@drawable/white_corner"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textAlignment="center" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="5dp"
        android:id="@+id/editText3"
        android:visibility="visible"
        android:hint="Password"
        android:textSize="14sp"
        android:textColor="@color/bodyTextColor"
        android:background="@drawable/white_corner"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:textAlignment="center" />

    <EditText
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="100dp"
        android:visibility="visible"
        android:hint="Name"
        android:textSize="14sp"
        android:textColor="@color/bodyTextColor"
        android:background="@drawable/white_corner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:textAlignment="center" />

    <Button
        android:text="Add Value to database"
        android:id="@+id/save"
        android:layout_width="300dp"
        android:textColor="#000000"
        android:background="@drawable/rounded_corner"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_height="38dp"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:text="Firebase Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:textColor="@color/buttonTextColor"
        android:textSize="24sp" />

    <TextView
        android:text="Save Value To Fiebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:textColor="@color/buttonTextColor"
        android:textSize="14sp" />
</RelativeLayout>
